<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Appenders>
        <!-- Console Appender -->
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} [%t] %-5level %logger{36} - %msg%n" />
        </Console>

        <!-- File Appender -->
        <File name="FileLogger" fileName="logs/application.log" append="true">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} [%t] %-5level %logger{36} - %msg%n" />
        </File>

        <!-- Rolling File Appender -->
        <RollingFile name="RollingFile" fileName="logs/application-rolling.log" filePattern="logs/application-%d{yyyy-MM-dd}-%i.log.gz">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} [%t] %-5level %logger{36} - %msg%n" />
            <Policies>
                <SizeBasedTriggeringPolicy size="10MB" />
                <TimeBasedTriggeringPolicy interval="1" modulate="true" />
            </Policies>
        </RollingFile>
    </Appenders>

    <Loggers>
        <!-- Root Logger -->
        <Root level="info">
            <AppenderRef ref="Console" />
            <AppenderRef ref="FileLogger" />
            <AppenderRef ref="RollingFile" />
        </Root>

        <!-- Specific Logger for your service layer -->
        <Logger name="tn.esprit.devops_project.services" level="debug" additivity="false">
            <AppenderRef ref="Console" />
            <AppenderRef ref="FileLogger" />
        </Logger>

        <!-- Specific Logger for your controller layer -->
        <Logger name="tn.esprit.devops_project.controllers" level="debug" additivity="false">
            <AppenderRef ref="Console" />
            <AppenderRef ref="FileLogger" />
        </Logger>
    </Loggers>
</Configuration>
